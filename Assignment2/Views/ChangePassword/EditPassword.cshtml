@model Assignment2.Models.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "_Layout";
}
<div id="myTabs">

    <ul>
        <li>Change Password</li>
    </ul>

    <div class="container center_div">
        <form method="post">
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" placeholder="Enter Password To Be Change">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter Password To Be Change">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <div class="container my-3">
                        <div class="col-sm-10 text-center">
                            <button type="submit" asp-action="EditPassword" class="btn btn-primary">Change Password</button>
                            <a asp-action="Home" class="btn btn-primary">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>