@model Login


<div class="my-login-page">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper">
                    <div class="brand">
                        <img src="@Url.Content("/Images/Logo/MCBOA.png")" alt="MCBOA">
                    </div>
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">Login</h4>
                            <form method="POST" class="my-login-validation" novalidate="">
                                <div class="form-group">
                                    <label asp-for="LoginId" class="control-label"></label>
                                    <input asp-for="LoginId" class="form-control" required autofocus/>
                                    <span asp-validation-for="LoginId" class="text-danger"></span>
                                    <div class="invalid-feedback">
                                        Email is invalid
                                    </div>
                                </div>
                                

                                <div class="form-group ">
                                    <label for="Password" class="control-label">Password</label>
                                    <input id="Password" name="Password" type="password" class="form-control" required data-eye/>
                                    @Html.ValidationMessage("Password", new {@class = "text-danger"})
                                    <div class="invalid-feedback">
                                        Password is required
                                    </div>
                                </div>

                                    <div class="custom-checkbox custom-control">
                                        <input type="checkbox" name="remember" id="remember" class="custom-control-input">
                                        <label for="remember" class="custom-control-label">Remember Me</label>
                                    </div>

                                <div class="form-group">
                                    @Html.ValidationMessage("LoginFailed", new {@class = "text-danger"})
                                </div>

                                <div class="form-group m-0">
                                    <button type="submit" value="Login" class="btn btn-primary btn-block">
                                        Login
                                    </button>

                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}