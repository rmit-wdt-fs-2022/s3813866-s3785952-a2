@using Assignment2.Utility
@model Account
@{
    ViewData["Title"] = "Deposit";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center ">
                Current Account
            </h3>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-hover table-bordered">
                        <thead>
                        <tr>
                            <th>
                                Account Number
                            </th>
                            <th>
                                Account Type
                            </th>
                            <th>
                                Current Balance
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>
                                @Model.AccountNumber
                            </td>
                            <td>
                                @{
                                    string? accountType = null;
                                    char savings = 'S';
                                    char checking = 'C';
                                    if (Model.AccountType.Equals(savings))
                                    {
                                        accountType = "Savings";
                                    }
                                    else if (Model.AccountType.Equals(checking))
                                    {
                                        accountType = "Checking";
                                    }
                                }
                                <a>@accountType</a>
                            </td>
                            <td>
                                @Model.Transactions.CalculateAccountBalance().ToString("C")
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    <form asp-action="Deposit">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="Amount" class="control-label">Enter And Amount To Deposit</label>
                                    <input id="Amount" name="Amount" class="form-control" value="@ViewBag.Amount?.ToString("0.00")"
                                           data-val="true" data-val-number="The field Amount must be a number."
                                           data-val-required="The Amount field is required." 
                                           placeholder="Enter Amount You Wish To Deposit"/>
                                    @Html.ValidationMessage("Amount", new {@class = "text-danger"})
                                    <label for="Comment" class="control-label"> Enter A Comment</label>
                                    <input id="Comment" name="Comment" class="form-control" placeholder="Add A Comment"/>
                                    <br/>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                        <div class="col-md-6 button-deposit-right">
                            <div class=" col-md-6">
                                <div class="form-group">
                                    <input type="submit" value="Deposit" class="btn btn-primary"/>
                                </div>
                            </div>
                            </div>
                            <div class="col-md-6 button-deposit-left">
                                <div class=" col-md-6">
                                    <div class="form-group">
                                        <a asp-action="Index" class="btn btn-block btn-danger">
                                            Cancel
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}