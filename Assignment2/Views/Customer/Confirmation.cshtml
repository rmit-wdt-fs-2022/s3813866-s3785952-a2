@using Assignment2.ViewModels
@model DepositViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center ">
                Comfirmation
            </h3>
            <br/>
            <h4>Transaction type: Deposit</h4>
            <br/>
            <h4>Amount: @Html.DisplayNameFor(model => model.Amount)</h4>
            <br>
            <h4>Comment: @Html.DisplayNameFor(model => model.Comment)</h4>
            
            <a class="btn btn-primary"
               asp-action="Confirmation" value="@Model">
                Deposit
            </a>
            <a class="btn btn-primary"
               asp-action="Index">
                Cancel
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}