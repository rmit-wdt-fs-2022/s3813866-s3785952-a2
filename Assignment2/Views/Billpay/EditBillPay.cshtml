@model Assignment2.Models.ViewModels.BillPayViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

            <form method="post" class="needs-validation">

                <div class="form-group row">
                    <label asp-for="AccountNumber" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="AccountNumber" class="form-control" placeholder="Tax File Number" value=@Model.BillPay.AccountNumber>
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PayeeId" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="PayeeId" class="form-control" placeholder="Address" required value=@Model.BillPay.PayeeId>
                        <span asp-validation-for="PayeeId" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Amount" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Amount" class="form-control" placeholder="Suburb" required value=@Model.BillPay.Amount>
                        <span asp-validation-for="Amount" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="ScheduleTimeUtc" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="ScheduleTimeUtc" class="form-control" placeholder="State" required value=@Model.BillPay.ScheduleTimeUtc>
                        <span asp-validation-for="ScheduleTimeUtc" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Period" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Period" class="form-control" placeholder="PostCode" required value=@Model.BillPay.Period>
                        <span asp-validation-for="Period" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <div class="container my-3">
                            <div class="col-sm-10 text-center">
                                <button type="submit" asp-action="EditBillPay" class="btn btn-primary">Update</button>
                                <a asp-action="Home" class="btn btn-primary">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
